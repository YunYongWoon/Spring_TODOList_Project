<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="repository.UserMapper">
    <insert id="Register">
        insert into Users(AccountID,Password) values(#{accountID}, #{password})
    </insert>
    <select id="Login" resultType="domain.User">
        select * from Users where AccountID = #{accountID}
    </select>
    <select id="CheckID" resultType="String">
        select accountID from Usere where AccountID = #{accountID}
    </select>
</mapper>